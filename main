local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Koordinat summit
local summitPos = Vector3.new(11002.6, 548.5, 118.8)
local summitCount = 0

-- GUI Setup
local gui = Instance.new("ScreenGui")
gui.Name = "SummitCounterGUI"
gui.ResetOnSpawn = false -- Agar GUI tidak hilang saat mati
gui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 160, 0, 40)
frame.Position = UDim2.new(0.05, 0, 0.15, 0)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.BackgroundTransparency = 0.3

local label = Instance.new("TextLabel", frame)
label.Size = UDim2.new(1, 0, 1, 0)
label.BackgroundTransparency = 1
label.TextColor3 = Color3.fromRGB(255, 255, 255)
label.TextScaled = true
label.Font = Enum.Font.GothamBold
label.Text = "Summit: 0"

-- Fungsi Teleport Aman
local function teleportSummitSafe()
    local char = player.Character or player.CharacterAdded:Wait()
    local hrp = char:WaitForChild("HumanoidRootPart", 5)
    
    if hrp then
        -- Buat platform sementara
        local platform = Instance.new("Part")
        platform.Size = Vector3.new(30, 1, 30)
        platform.Anchored = true
        platform.Position = summitPos + Vector3.new(0, -3, 0) -- Di bawah kaki
        platform.Transparency = 0.5
        platform.Parent = workspace
        
        -- Teleport pemain
        hrp.CFrame = CFrame.new(summitPos + Vector3.new(0, 3, 0))
        
        task.wait(2)
        platform:Destroy()
    end
end

-- Fungsi Auto Jump (15 Menit)
local function autoJump()
    local endTime = tick() + (15 * 60)
    while tick() < endTime do
        local char = player.Character
        if char then
            local hum = char:FindFirstChildOfClass("Humanoid")
            if hum then
                hum.Jump = true
            end
        end
        task.wait(0.8)
    end
end

-- Main Loop
task.spawn(function()
    while true do
        -- 1. Teleport ke atas
        teleportSummitSafe()
        
        -- 2. Tunggu 15 menit sambil lompat
        autoJump()
        
        -- 3. Update Skor
        summitCount += 1
        label.Text = "Summit: " .. summitCount
        
        -- 4. Reset Karakter
        if player.Character and player.Character:FindFirstChildOfClass("Humanoid") then
            player.Character:FindFirstChildOfClass("Humanoid").Health = 0
        end
        
        -- 5. Tunggu karakter baru muncul sepenuhnya
        player.CharacterAdded:Wait()
        task.wait(2) -- Jeda tambahan demi stabilitas
    end
end)
